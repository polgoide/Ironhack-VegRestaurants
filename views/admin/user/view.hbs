<article class="admin">
<h2>{{user.email}}</h2>
<div>
  <form action="/admin/users/{{user._id}}" method="POST">
  <select name="role">
    <option value="Guest">Guest</option>
    <option value="Admin">Admin</option>
  </select>
  <select name="active">
    <option value="true">Active</option>
    <option value="false">Ban</option>
  </select>
  <input type="Submit">
  </form>
  <ul>
    <li>Nombre: {{user.name}}</li>
    <li>Email: {{user.email}}</li>
    <li>Registrado el: {{user.createdAt}}</li>
    </ul>
</div>
<div>
  <h3>Comentarios de este usuario</h3>
  {{#each comments}}
  <p>Comentario: {{this.body}}</p>
  {{/each}}
</div>
</article>